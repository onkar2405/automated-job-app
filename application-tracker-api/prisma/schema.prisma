datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Application {
  id          Int      @id @default(autoincrement())
  company     String
  role        String
  status      Status   @default(APPLIED)
  appliedDate DateTime @default(now())
  source      String?  // e.g. LinkedIn, Referral
  notes       String?
}

enum Status {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  WITHDRAWN
}
